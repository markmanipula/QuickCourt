{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",  // Set to the root folder
    "paths": {
      "@/*": ["*"]  // Use this to resolve from the root folder
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
